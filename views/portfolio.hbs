          if(age<40)
          {
            p4=data1.data[0].salary6;
            p5=data1.data[0].salary3;
            p6=data1.data[0].salary3;
            p7=data1.data[0].salary4;
            p8=data1.data[0].salary3;
            p9=data1.data[0].salary3;
          }   
          else if(age>=40 && age<50)
          {
            p4=data1.data[0].salary6;
            p5=data1.data[0].salary3;
            p6=data1.data[0].salary4;
            p7=data1.data[0].salary3;
            p8=data1.data[0].salary3;
            p9=data1.data[0].salary3;
          }  
